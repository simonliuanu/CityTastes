<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/navi_color"
    android:gravity="center">

    <TextView
        android:id="@+id/noti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmation"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/noti_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have added 5 restaurants. Do you want to go to your favorites?"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/noti_yes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:layout_margin="20sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/navi_color"
            android:padding="10dp" />
        <Button
            android:id="@+id/noti_no_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/white"
            android:layout_margin="20sp"
            android:backgroundTint="@color/navi_color"
            android:padding="10dp"
            android:layout_marginRight="15dp" />

    </LinearLayout>
</LinearLayout>
