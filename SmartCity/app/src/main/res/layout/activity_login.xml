<?xml version="1.0" encoding="utf-8"?>
<!-- set scroll view to make sure the page fit different screen size-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".activity.LoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="30sp"
        >

        <!-- image from www.iconfont.cn -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:src="@drawable/login_pic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smart City"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30sp"
            android:paddingRight="30sp"
            android:text="Empowering Your Journey: Anything, Anytime, Anywhere."
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/login_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:hint="Please input your account"/>

        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:hint="Please input your password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/theme_color"
            android:layout_marginTop="30sp"
            android:text="Login"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginBottom="50sp"
            />

    </LinearLayout>

</ScrollView>
